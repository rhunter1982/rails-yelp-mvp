<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>

  <%= link_to "create review", new_restaurant_review_path(@restaurant), class:"btn btn-primary"  %>
  <%= link_to "back to Restaurants", restaurants_path, class:"btn btn-primary"  %>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
    <% end %>
  </ul>
  <br>
</div>
